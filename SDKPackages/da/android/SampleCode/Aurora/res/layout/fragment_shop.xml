<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout android:id="@+id/shop_bar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
	    android:background="@drawable/shop_title" >
		
        <TextView android:id="@+id/shop_bar_subtitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/holo_dark_grey" 
        	android:layout_alignParentLeft="true"/>
        
		<TextView android:id="@+id/shop_bar_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
	        android:textStyle="bold" 
        	android:layout_centerHorizontal="true"/>
		
	</RelativeLayout>
	
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
        <ProgressBar android:id="@android:id/empty"
        	android:paddingTop="32dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true" />
        
	<ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="false" />
	
	</RelativeLayout>
	
</LinearLayout>
